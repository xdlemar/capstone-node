{
  "name": "capstone-node",
  "private": true,
  "workspaces": [
    "auth-svc",
    "alms-svc",
    "dtrs-svc",
    "inventory-svc",
    "plt-svc",
    "procurement-svc",
    "capstone-web"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:auth": "npm --workspace auth-svc run dev",
    "dev:alms": "npm --workspace alms-svc run dev",
    "dev:dtrs": "npm --workspace dtrs-svc run dev",
    "dev:inventory": "npm --workspace inventory-svc run dev",
    "dev:plt": "npm --workspace plt-svc run dev",
    "dev:procurement": "npm --workspace procurement-svc run dev",
    "dev:web": "npm --workspace capstone-web run dev",
    "build": "npm-run-all -s build:*",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "npm-run-all -s test:*"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
